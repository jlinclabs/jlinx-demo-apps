datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id          Int          @id @default(autoincrement())
  createdAt   DateTime     @default(now())
  secretKey   String?      @unique
  email       String?      @unique
  sessions    Session[]
  identifiers Identifier[]
  profiles    Profile[]
  contracts   Contract[]
  sisas       Sisa[]
}

model Session {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  lastSeenAt DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])
  userId     Int?
}

model Identifier {
  id         String    @id
  createdAt  DateTime  @default(now())
  secretSeed String
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  Contract   Contract? @relation(fields: [contractId], references: [id])
  contractId String?
  Sisa       Sisa?     @relation(fields: [sisaId], references: [id])
  sisaId     String?
}

model Profile {
  id        String   @id
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model Contract {
  id           String       @id
  createdAt    DateTime     @default(now())
  User         User         @relation(fields: [userId], references: [id])
  userId       Int
  Identifier   Identifier[]
  identifierId String
}

model Sisa {
  id           String       @id
  createdAt    DateTime     @default(now())
  User         User         @relation(fields: [userId], references: [id])
  userId       Int
  Identifier   Identifier[]
  identifierId String
}
